<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".SignupActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="@dimen/_20sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginBottom="@dimen/_20sdp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:text="..Good Initiative for Your Dog.."
                    android:textSize="@dimen/_20sdp"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:layout_gravity="center"
                    android:textSize="@dimen/_24sdp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="SIGN UP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userimage"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="@dimen/_2sdp"
        android:src="@drawable/user1"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp">

            </de.hdodenhof.circleimageview.CircleImageView>




            </LinearLayout>


            <EditText
                android:textSize="@dimen/_14sdp"
                android:windowSoftInputMode="stateAlwaysVisible"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:singleLine="false"
                android:isScrollContainer="true"
                android:focusable="true"
                android:id="@+id/et_Name"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/gray_corner"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="Your Name"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:padding="@dimen/_10sdp" />


            <EditText
                android:textSize="@dimen/_14sdp"
                android:windowSoftInputMode="stateAlwaysVisible"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:singleLine="false"
                android:isScrollContainer="true"
                android:focusable="true"
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/gray_corner"
                android:drawablePadding="@dimen/_10sdp"
                android:hint=" Your Email"
                android:imeOptions="actionGo"
                android:inputType="text"
                android:layout_gravity="center"
                android:padding="@dimen/_10sdp" />




            <EditText
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:windowSoftInputMode="stateAlwaysVisible"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:singleLine="false"
                android:isScrollContainer="true"
                android:focusable="true"
                android:id="@+id/et_MobileNumber"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/gray_corner"
                android:layout_height="@dimen/_50sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="Mobile Number"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="10"
                android:padding="@dimen/_10sdp" />



            <EditText
                android:textSize="@dimen/_14sdp"
                android:windowSoftInputMode="stateAlwaysVisible"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:singleLine="false"
                android:isScrollContainer="true"
                android:focusable="true"
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/gray_corner"
                android:layout_height="@dimen/_50sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="Password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:padding="@dimen/_10sdp" />



            <RelativeLayout
                android:background="@drawable/gray_corner"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">




                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    app:hintText="Select State"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:layout_height="@dimen/_50sdp"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_drop_down_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/gray_corner"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">




                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    app:hintText="Select City"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_50sdp"
                    tools:ignore="MissingConstraints" />


                <ImageView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_drop_down_arrow" />
            </RelativeLayout>



            <EditText
                android:textSize="@dimen/_14sdp"
                android:windowSoftInputMode="stateAlwaysVisible"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:singleLine="false"
                android:isScrollContainer="true"
                android:focusable="true"
                android:id="@+id/et_zipcode"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/gray_corner"
                android:layout_height="@dimen/_50sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="Postcode"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:padding="@dimen/_10sdp" />
              <LinearLayout
                android:layout_marginBottom="@dimen/_20sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                  <TextView
                      android:layout_marginTop="@dimen/_15sdp"
                      android:layout_gravity="center"
                      android:textSize="@dimen/_16sdp"
                      android:textStyle="bold"
                      android:textColor="@color/black"
                      android:text="You have any pet"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>

                  <RadioGroup
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

                      <RadioButton
                          android:id="@+id/radio_yes"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Yes"/>

                      <RadioButton
                          android:id="@+id/radio_no"
                          android:layout_marginLeft="@dimen/_20sdp"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="No"/>

                  </RadioGroup>

              </LinearLayout>


              <TextView
                  android:visibility="gone"
                  android:id="@+id/tv_vendorsignup"
                  android:textStyle="bold"
                  android:textSize="@dimen/_18sdp"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:fontFamily="@font/arlrdbd"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Signup as Vendor"
                  android:textColor="@color/colorPrimary"/>




            <!-- sign In Button -->
            <Button
                android:id="@+id/SIGNUPTYPE"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/signupbackground"
                android:text="NEXT"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_below="@+id/relativelayout"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:tag="binding_14"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true">


                    <TextView
                        android:layout_margin="@dimen/_10sdp"
                        android:textStyle="italic"
                        android:textSize="@dimen/_26sdp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..If feeling lazy.."/>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_margin="@dimen/_10sdp"
                        android:id="@+id/forgot_google"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/google" />


                    <ImageView
                        android:layout_margin="@dimen/_10sdp"
                        android:id="@+id/signIn_facebook"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/facebook"
                        />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>