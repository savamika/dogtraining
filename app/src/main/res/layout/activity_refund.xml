<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
     >

    <RelativeLayout

        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/backbutton"
            android:layout_width="@dimen/_40sdp"
            android:padding="@dimen/_10sdp"
            android:layout_height="match_parent"
            android:src="@drawable/back_white"/>

        <TextView
            android:id="@+id/tv_commandname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Return"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"></TextView>


    </RelativeLayout>

    <ScrollView

        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="@dimen/_20sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginBottom="@dimen/_20sdp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:text="Product Return"
                    android:textSize="@dimen/_20sdp"
                    android:layout_height="wrap_content"/>



            </LinearLayout>


            <EditText
                android:textSize="@dimen/_14sdp"
                android:windowSoftInputMode="stateAlwaysVisible"
                android:overScrollMode="always"
                android:scrollbarStyle="insideInset"
                android:singleLine="false"
                android:isScrollContainer="true"
                android:focusable="true"
                android:id="@+id/et_reason"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/gray_corner"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="Reason"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:padding="@dimen/_10sdp" />






















            <LinearLayout
                android:id="@+id/l_shop"
                android:background="@drawable/gray_corner"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="@dimen/_100sdp"
                android:orientation="vertical"
                android:layout_height="@dimen/_150sdp">


                <ImageView
                    android:id="@+id/ivimage"
                    android:layout_width="@dimen/_100sdp"
                    android:scaleType="center"
                    android:src="@drawable/ic_baseline_file"
                    android:layout_height="@dimen/_150sdp">

                </ImageView>



            </LinearLayout>

            <TextView
                android:layout_width="@dimen/_100sdp"
                android:textAlignment="center"
                android:text="Product Image"
                android:textColor="@color/gray"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="wrap_content"/>







            <!-- sign In Button -->
            <Button
                android:id="@+id/SIGNUPTYPE"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/signupbackground"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />



        </LinearLayout>

    </ScrollView>






</LinearLayout>