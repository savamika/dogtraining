<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_margin="@dimen/_20sdp"
    tools:context=".VendorSignup.OptionselectedActivity">


    <TextView
        android:layout_margin="@dimen/_10sdp"
        android:padding="@dimen/_15sdp"
        android:background="@drawable/gray_corner"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/tv_usersignup"
        android:textStyle="bold"
        android:textSize="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/arlrdbd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signup as User"
        android:textColor="@color/colorPrimary"/>


    <TextView
        android:layout_margin="@dimen/_10sdp"
        android:padding="@dimen/_15sdp"
        android:background="@drawable/gray_corner"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/tv_vendorsignup"
        android:textStyle="bold"
        android:textSize="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/arlrdbd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signup as Vendor"
        android:textColor="@color/colorPrimary"/>







</LinearLayout>