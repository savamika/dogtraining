<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".OTp_Activity">

    <ImageView
        android:layout_gravity="center"
        android:layout_margin="@dimen/_20sdp"
        android:id="@+id/forgot_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/otp" />

    <LinearLayout
        android:layout_margin="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:fontFamily="@font/arlrdbd"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verification Code"
            android:textSize="@dimen/_30sdp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:textStyle="bold" />

        <TextView
            android:textSize="@dimen/_16sdp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:text="@string/create"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/layout_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_header"
        android:orientation="horizontal">

        <EditText
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/editTexttwo"
            android:layout_width="@dimen/_60sdp"
            android:textColor="@color/black"
            android:layout_height="@dimen/_60sdp"
            android:inputType="numberPassword"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/pricebackground"
            android:maxLength="1" />

        <EditText
            android:textColor="@color/black"
            android:id="@+id/pin_second_edittext"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:inputType="numberPassword"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/pricebackground"
            android:maxLength="1"/>

        <EditText
            android:textColor="@color/black"
            android:id="@+id/pin_third_edittext"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:inputType="numberPassword"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/pricebackground"
            android:maxLength="1"/>

        <EditText
            android:textColor="@color/black"
            android:id="@+id/pin_forth_edittext"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:inputType="numberPassword"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@drawable/pricebackground"
            android:maxLength="1"/>

        <requestFocus />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Didn't Receive the OTP?"
            android:textColor="@color/grey_60"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/tv_resendcode"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resend Code"
            android:textColor="@color/colorPrimary"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />



    </LinearLayout>

    <Button
        android:id="@+id/AVOTP"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_60sdp"
        android:background="@drawable/signupbackground"
        android:text="SUBMIT"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>