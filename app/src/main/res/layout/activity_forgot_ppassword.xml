<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ForgotPpassword">




    <ImageView
        android:layout_gravity="center"
        android:layout_margin="@dimen/_20sdp"
        android:id="@+id/forgot_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_forgotpassword" />

    <LinearLayout
        android:layout_margin="@dimen/_30sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NEW CREDENTIALS"
            android:fontFamily="@font/arlrdbd"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_30sdp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_margin="@dimen/_20sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/layout_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_header"
        android:orientation="vertical">

        <EditText
            android:textSize="@dimen/_14sdp"
            android:windowSoftInputMode="stateAlwaysVisible"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:singleLine="false"
            android:isScrollContainer="true"
            android:focusable="true"
            android:id="@+id/NewPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/gray_corner"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="New Password"
            android:imeOptions="actionGo"
            android:inputType="textPassword"
            android:layout_gravity="center"
            android:maxLength="10"
            android:padding="@dimen/_10sdp" />




        <EditText
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:windowSoftInputMode="stateAlwaysVisible"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:singleLine="false"
            android:isScrollContainer="true"
            android:focusable="true"
            android:id="@+id/RePassword"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/gray_corner"
            android:layout_height="@dimen/_50sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="Re-Password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:padding="@dimen/_10sdp" />


    </LinearLayout>


    <Button
        android:id="@+id/FORGOTPASSWORD"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_60sdp"
        android:background="@drawable/signupbackground"
        android:text="SUBMIT"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>