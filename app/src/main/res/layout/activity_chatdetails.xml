<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChatdetailsActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_100sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:background="@drawable/adminchatbackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arlrdbd"
                    android:padding="@dimen/_10sdp"
                    android:text="hi !, How are you"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:background="@drawable/adminchatbackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:text="fine How About You"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"/>



            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:background="@drawable/adminchatbackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:text="fine How About You fine How About You fine How About You fine How About You fine How About You"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"/>



            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_100sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:background="@drawable/adminchatbackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:text="hi !, How are you hi !, How are you hi !, How are you hi !, How are you hi !, How are you"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <LinearLayout
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/gray_cornerfill"
            android:weightSum="1"
            android:layout_weight=".3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_weight=".1"
                android:id="@+id/signIn_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="@string/enteryourtext"
                android:inputType="text"
                android:textSize="16sp"
                android:padding="@dimen/_10sdp" />


            <ImageView
                android:layout_gravity="center"
                android:layout_weight=".45"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_attach"/>

            <ImageView
                android:layout_gravity="center"
                android:layout_weight=".45"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_smily"/>


        </LinearLayout>

            <ImageView
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_weight="1.7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/send"/>


        </LinearLayout>
    </RelativeLayout>

</FrameLayout>